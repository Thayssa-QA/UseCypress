{
  "devDependencies": {
    "cypress": "^14.5.4",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "teste": "npm run clean-reports && cypress run && npm run merge-reports && npm run generate-report",
    "clean-reports": "rimraf cypress/reports",
    "merge-reports": "npx mochawesome-merge cypress/reports/*.json > cypress/reports/report.json",
    "generate-report": "npx marge cypress/reports/report.json --reportDir cypress/reports/html"
  }
}
